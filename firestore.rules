rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // match /products/{document=**}{
    //   allow read : if true;
    //   allow write : if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.level == 0;
    // }
    // match /users/{document=**}{
    //   allow read : if request.auth.uid == request.resource.data.uid;
    //   allow write : if request.auth.uid == request.resource.data.uid;
    // }
    match /users/{id} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.level < 3;
      allow create: if false;
      allow update: if resource.data.uid == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.level == 0;
      allow delete: if false;
    }
    match /products/{document=**}{
      allow read : if true;
      allow write : if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.level == 0;
    }
    // match /{document=**} {
    //   allow read, write: if request.time < timestamp.date(2020, 6, 18);
    // }
  }
}